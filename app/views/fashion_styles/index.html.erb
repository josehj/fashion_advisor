<p id="notice"><%= notice %></p>

<h1><%= FashionStyle.model_name.human %></h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Nombre</th>
      <th scope="col" colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fashion_styles.each do |fashion_style| %>
      <tr>
        <td><%= fashion_style.name %></td>
        <td>
          <%= link_to fashion_style, class: "icon-button mr-3", title: 'show' do %>
            <%=fa_icon('eye')%>
          <% end %>
          <%= link_to edit_fashion_style_path(fashion_style), class: "icon-button mr-3", title: 'edit' do %>
            <%=fa_icon('edit')%>
          <% end %>
          <%= link_to fashion_style, method: :delete, data: { confirm: 'Are you sure?' }, class: "icon-button", title: 'delete' do %>
            <%=fa_icon('trash')%>
          <% end %>
        </td>
      
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Estilo de moda', new_fashion_style_path %>
