<p id="notice"><%= notice %></p>

<p>
  <strong>Nombre:</strong>
  <%= @garment_type.name %>
</p>

<p>
  <strong>Categoria:</strong>
  <%= @garment_type.translated_category %>
</p>

<h4 class="mb-4">Atributos: </h4>

<div class="row">
  <% @garment_type.all_attributes.group_by(&:kind).each do |key, values| %>
    <div class="col-sm-4">
      <strong><%= GarmentAttribute.translated_kind(key) %>:</strong>
      <ul>
      <% values.each do |value| %>
        <li><%= value.name %></li>
      <%end%>
      </ul>
    </div>
  <%end%>
</div>


<%= link_to 'Edit', edit_garment_type_path(@garment_type) %> |
<%= link_to 'Back', garment_types_path %>
