<p id="notice"><%= notice %></p>

<h1><%= FashionStyleGarment.model_name.human %></h1>

<p>
  <strong>Fashion style:</strong>
  <%= FashionStyle.find(@fashion_style_garment.fashion_style_id)&.name %>
</p>

<p>
  <strong>Garment Type:</strong>
  <%= GarmentType.find(@fashion_style_garment.garment_type_id)&.name %>
</p>


<% @fashion_style_garment.all_attributes.group_by(&:kind).each do |key, values| %>
  <p>
    <strong>Atributos <%= GarmentAttribute.translated_kind(key) %>:</strong>
    <ul>
    <% values.each do |value| %>
      <li><%= value.name %></li>
    <%end%>
    </ul>
  </p>
<%end%>


<%= link_to 'Edit', edit_fashion_style_garment_path(@fashion_style_garment) %> |
